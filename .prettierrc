{
    "plugins": [
        "prettier-plugin-solidity"
    ],
    "overrides": [
        {
            "files": "*.sol",
            "options": {
                "bracketSpacing": true,
                "compiler": "0.8.28",
                "parser": "solidity-parse",
                "printWidth": 120,
                "tabWidth": 4
            }
        },
        {
            "files": "*.md",
            "options": {
                "parser": "markdown",
                "printWidth": 120,
                "tabWidth": 2
            }
        }
    ]
}
