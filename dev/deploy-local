#!/bin/bash
set -euo pipefail

echo "⧖ Deploying local contracts."

# make sure to create a reproducible build
FOUNDRY_PROFILE=local forge script script/DeployLocal.s.sol:DeployLocalScripts --rpc-url anvil --broadcast --slow --sig 'deployLocal()'

echo "✔ Done deploying local contracts."

sleep 2

./dev/check-local-deployment
