#!/bin/bash
set -euo pipefail

# anvil first well-known private key
export LOCAL_DEPLOY_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Define a function to kill the anvil process
kill_anvil() {
    if pgrep -f anvil > /dev/null; then
        echo "⧖ Killing existing anvil instance"
        pkill -f anvil
    fi
}

wait_for_valid_json() {
  local file="$1"
  local interval="${2:-1}"  # seconds between checks (default: 1)

  echo "⏳ Waiting for valid JSON in: $file"

  until [[ -f "$file" ]] && jq empty "$file" >/dev/null 2>&1; do
    sleep "$interval"
  done

  echo "✅ File is now valid JSON: $file"
}

# Step 1: Kill any existing anvil process
kill_anvil
#rm ./anvil-state.json || echo "no anvil state exists"

# Step 2: Start anvil in the background
echo "▶ Starting anvil..."
npm run anvil &

sleep 1

# Step 3: Run deploy-local
echo "▶ Running deploy-local..."
npm run deploy-local

kill_anvil

# Step 4: Wait a bit for anvil to write to disk
wait_for_valid_json ./anvil-state.json